{
    "@id": "http://dylanvanassche.be/cases/rmlmapper/fuseki/transform-postgresql-to-ntriples",
    "name": "RMLMapper: Fuseki: PostgreSQL",
    "description": "Transform PostgreSQL database into N-Triples with RMLMapper and Fuseki Triplestore",
    "steps": [
        {
            "@id": "http://dylanvanassche.be/cases/rmlmapper/fuseki/transform-postgresql-to-ntriples#step1",
            "name": "Load CSV",
            "resource": "PostgreSQL",
            "command": "load",
            "parameters": {
                "csv_file": "student.csv",
                "table": "student"
            }
        },
        {
            "@id": "http://dylanvanassche.be/cases/rmlmapper/fuseki/transform-postgresql-to-ntriples#step2",
            "name": "Transform CSV into RDF",
            "resource": "RMLMapper",
            "command": "execute_mapping",
            "parameters": {
                "mapping_file": "mapping.rml.ttl",
                "output_file": "out.nt",
                "serialization": "nquads",
                "rdb_host": "PostgreSQL",
                "rdb_port": "5432",
                "rdb_username": "root",
                "rdb_password": "root",
                "rdb_type": "PostgreSQL",
                "rdb_name": "db"
            }
        },
        {
            "@id": "http://dylanvanassche.be/cases/rmlmapper/fuseki/transform-postgresql-to-ntriples#step3",
            "name": "Load RDF",
            "resource": "Fuseki",
            "command": "load",
            "parameters": {
                "rdf_file": "out.nt"
            }
        },
        {
            "@id": "http://dylanvanassche.be/cases/rmlmapper/fuseki/transform-postgresql-to-ntriples#step4",
            "name": "Execute SPARQL query",
            "resource": "Query",
            "command": "execute_and_save",
            "parameters": {
                "query": "PREFIX foaf: <http://xmlns.com/foaf/0.1/> CONSTRUCT WHERE { ?s foaf:name ?o1 . }",
                "sparql_endpoint": "http://localhost:3030/ds",
                "results_file": "results.nt"
            }
        }
    ]
}
