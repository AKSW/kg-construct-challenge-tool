{
    "@id": "http://dylanvanassche.be/test-cases/ontopendpoint/fuseki/transform-postgresql-to-ntriples",
    "name": "Ontop Virtualize: PostgreSQL RDB",
    "description": "Transform PostgreSQL database into Turtle with Ontop Virtualize",
    "steps": [
        {
            "@id": "http://dylanvanassche.be/test-cases/ontopendpoint/transform-postgresql-to-ntriples#step1",
            "name": "Load RDB",
            "resource": "PostgreSQL",
            "command": "load",
            "parameters": {
                "csv_file": "student.csv",
                "table": "student"
            }
        },
        {
            "@id": "http://dylanvanassche.be/test-cases/ontopendpoint/transform-postgresql-to-ntriples#step2",
            "name": "Virtualize RDF access to PostgreSQL",
            "resource": "OntopVirtualize",
            "command": "execute_mapping",
            "parameters": {
                "mapping_file": "mapping.r2rml.ttl",
                "rdb_host": "PostgreSQL",
                "rdb_port": "5432",
                "rdb_username": "root",
                "rdb_password": "root",
                "rdb_type": "PostgreSQL",
                "rdb_name": "db"
            }
        },
        {
            "@id": "http://dylanvanassche.be/test-cases/ontopendpoint/transform-postgresql-to-ntriples#step3",
            "name": "Execute SPARQL query",
            "resource": "Query",
            "command": "execute_and_save",
            "parameters": {
                "query": "PREFIX foaf: <http://xmlns.com/foaf/0.1/> CONSTRUCT WHERE { ?s foaf:name ?o1 . }",
                "sparql_endpoint": "http://localhost:8888/sparql",
                "results_file": "results.nt"
            }
        }
    ]
}
